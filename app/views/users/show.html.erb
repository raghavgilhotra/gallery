<div align="center">
<p>
  <strong>Username:</strong>
  <%= @user.username %><br>
<p>
  <h2>Albums</h2>
  <table>
  <% @user.albums.each do|album| %>
    <tr>
    <td><%= album.name %></td>
    <td><%= link_to 'show',album_path(album), class: "btn btn-primary" %></td>
    </tr>
	
  <% end %>
  </table>
  </div>
 
  <h2>Add new album:</h2>
    
	 <%= link_to 'New album', new_user_album_path(@user) , class: "btn btn-primary"%>
  
